<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:paddingTop="8dp"
    android:background="#fff">

<ImageView
    android:id="@+id/imageview_post_userimage"
    android:layout_width="32dp"
    android:layout_height="32dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent" />

<TextView
    android:id="@+id/displayname"
    android:text="@null"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="90sp"
    app:layout_constraintLeft_toRightOf="@+id/imageview_post_userimage"
    android:layout_marginLeft="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="4dp" />

<TextView
    android:id="@+id/messagetext"
    android:text="hi man, how are you?"
    android:background="@drawable/rounded_rectangle_orange"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="240dp"
    android:padding="8dp"
    android:textColor="#ffffff"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@+id/displayname"
    app:layout_constraintLeft_toRightOf="@+id/imageview_post_userimage"
    android:layout_marginLeft="8dp" />

<TextView
    android:id="@+id/timestamp"
    android:text="11:40"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    app:layout_constraintLeft_toRightOf="@+id/messagetext"
    android:layout_marginLeft="4dp"
    app:layout_constraintBottom_toBottomOf="@+id/messagetext" />

</android.support.constraint.ConstraintLayout>
    </ScrollView>