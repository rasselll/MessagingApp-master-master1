<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/post_activity_horizontal_margin"
    android:paddingBottom="0dp"
    tools:context="com.myproj.blogapp.PostActivity"
    android:background="#FFFFFF">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


<EditText
        android:backgroundTint="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleField"
        android:textSize="30sp"
        android:hint="@string/hint_title"
        android:textColor="#000"
        android:textCursorDrawable="@null"
        android:textStyle="bold"
        android:paddingBottom="0dp"
        android:layout_alignParentTop="true"
    android:layout_above="@+id/descField1"
    android:layout_alignParentStart="true" />


   <EditText
        android:backgroundTint="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:id="@+id/descField1"
        android:textSize="18sp"
        android:hint="@string/hint_desc"
        android:textColor="#000000"
        android:textStyle="normal"
        android:paddingBottom="5dp"
        android:layout_below="@+id/titleField"
        android:layout_alignParentStart="true" />



    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/descField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_desc"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_below="@+id/titleField"

        android:paddingBottom="20dp"
        android:layout_alignParentStart="true"/>





    <ImageButton
        android:layout_width="match_parent"
        android:background="#00f9f9f9"
        android:visibility="invisible"
        android:layout_below="@+id/descField"
        android:layout_height="wrap_content"
        android:id="@+id/imageSelect"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_above="@+id/newimage"
        android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newimage"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />






        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/editor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_desc"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"

                android:layout_marginTop="150dp" />

            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_desc"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"

                android:layout_marginTop="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>



