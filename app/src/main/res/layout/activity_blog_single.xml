    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:id="@+id/descriptionSingleBlog"
        android:layout_below="@+id/titleSingleBlog"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
android:textStyle="bold"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeSingleBlog"
        android:layout_below="@+id/descriptionSingleBlog"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textColor="#C0C0C0"
        android:textSize="15dp"
        />

    <WebView
        android:layout_marginTop="15dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/singleContent_webView"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_below="@+id/timeSingleBlog"
         />




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Post"
        android:id="@+id/singleRemoveBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


