<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   >
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.myproj.blogapp.BlogSingleActivity">









    <ImageView
        android:id="@+id/imageview_post_userimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/titleSingleBlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview_post_userimage"
        android:layout_alignTop="@+id/imageview_post_userimage"
        android:layout_toRightOf="@+id/imageview_post_userimage"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
android:textColor="#000"
        android:layout_alignParentRight="true"/>




